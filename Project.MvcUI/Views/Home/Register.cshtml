@model UserRegisterRequestModel

<form asp-action="Register" asp-controller="Home" method="post" class="p-3 w-75 m-auto">
    <div class="mb-3">
        <label>Kullanici ismi giriniz</label>
        <input asp-for="UserName" class="form-control"/>
    </div>

    <div class="mb-3">
        <label>Sifre giriniz</label>
        <input asp-for="Password" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Email giriniz</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="mb-3">
        <button class="btn btn-primary">Kayit Ol</button>
    </div>

</form>